<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdFosc"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_margin="80dp"
        android:layout_width="200dp"
        android:layout_height="213dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/icono" />

    <EditText
        android:id="@+id/pregunta1"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:hint="Nom"
        android:inputType="textPersonName"
        android:textColor="@color/blanc"
        android:textColorHint="@color/blanc" />

    <EditText
        android:id="@+id/pwd"
        android:layout_width="304dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:hint="Contrasenya"
        android:textColor="@color/blanc"
        android:textColorHint="@color/blanc"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/LogIn"
        android:layout_width="227dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/estil_botons"
        android:text="Iniciar SessiÃ³"
        android:onClick="login"/>


    <Button
        android:id="@+id/SignUp"
        android:layout_width="227dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/estil_botons"
        android:text="Registrar-se"
        android:onClick="signUp"/>

    <Button
        android:id="@+id/IniciGoogle"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background=""
        android:textColor="@color/blanc"
        android:style="?android:attr/borderlessButtonStyle"
        android:text="He perdut la contrasenya"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:onClick="recuperar_contrasenya"/>


</LinearLayout>