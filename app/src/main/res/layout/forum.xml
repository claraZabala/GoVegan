<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdClar"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titol2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/verdFosc"
        android:gravity="center"
        android:text="Forum:"
        android:textAppearance="@style/TextBlancTitolSecundari" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="346dp"
        android:layout_height="29dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="Escull una temÃ tica per fer una pregunta:" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="346dp"
        android:layout_height="185dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:spinnerMode="dialog"
        android:visibility="visible"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/pregunta"
        android:layout_width="346dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="85dp"
        android:hint="Fes una pregunta" />


    <Button
        android:id="@+id/send"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/estil_botons"
        android:text="Enviar" />

</LinearLayout>