<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutCompra"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titol"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/verdFosc"
        android:gravity="center"
        android:text="Llista de la compra:"
        android:textAppearance="@style/TextBlancTitolSecundari" />

    <TextView
        android:id="@+id/tipus1"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/verdClar"
        android:text="Ingredients"
        android:textSize="15dp" />
    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutLlistaCompra"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ingredient1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/verdClar" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Ingredient 1"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/imatge1"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@drawable/maduixa" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/verdClar" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Ingredient 2"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/imatge2"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@drawable/brocoli" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/verdClar" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Ingredient 3"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/imatge3"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@drawable/llentia" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/verdClar"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Ingredient 4"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/imatge4"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@drawable/xocolata" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/verdClar" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Ingredient 5"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <ImageView
            android:id="@+id/imatge5"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@drawable/batut" />

    </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/afegir"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:background="@color/taronjaFosc"
        android:text="Afegir"
        android:translationX="260dp"
        android:translationY="130dp" />

    <Button
        android:id="@+id/eliminar"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:background="@color/taronjaFosc"
        android:text="Eliminar"
        android:translationX="260dp"
        android:translationY="145dp"/>


</LinearLayout>