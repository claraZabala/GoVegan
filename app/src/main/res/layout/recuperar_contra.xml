<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/taronjaClar">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="30dp"
        android:text="Introdueixi el seu correu electrònic per a que poguem enviar-li un link on podrà generar una nova contrasenya. "
        android:textColor="@color/negre"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/correu"
        android:hint="Correu electrònic"
        android:textColorHint="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:ems="10"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/negre"
        android:inputType="textEmailAddress" />

    <Button
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="Acceptar"
        android:layout_marginTop="25dp"
        android:background="@drawable/estil_botons"
        android:onClick="recuperarContra"/>

</LinearLayout>