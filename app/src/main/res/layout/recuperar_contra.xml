<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/missatge"
        android:layout_width="match_parent"
        android:layout_height="402dp"
        android:textColor="@android:color/black"
        android:text="Introdueixi el seu correu electrònic per a que poguem enviar-li un link on podrà genera una nova contrasenya. "
        android:textSize="25dp"
        android:layout_gravity="center_vertical"/>

    <EditText
        android:id="@+id/correu"
        android:hint="Correu electrònic"
        android:textColorHint="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:ems="10"
        android:layout_marginTop="25dp"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/enviar_correu"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="Acceptar"
        android:layout_marginTop="25dp"
        android:background="@drawable/estil_botons"/>

</LinearLayout>