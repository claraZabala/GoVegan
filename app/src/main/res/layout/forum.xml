<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdClar"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/verdFosc"
        android:gravity="center"
        android:text="Forum:"
        android:textAppearance="@style/TextBlancTitolSecundari" />

    <TextView
        android:layout_width="346dp"
        android:layout_height="29dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="Escull una temÃ tica per fer una pregunta:" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="346dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:spinnerMode="dialog"
        android:visibility="visible"
        tools:visibility="visible" />


    <ScrollView
        android:layout_width="346dp"
        android:layout_height="229dp"
        android:layout_gravity="center"
        android:background="@color/verdMoltClar"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/verdClar"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Usuari:" />

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="On puc comprar heura?          5 respostes" />

                        <Button
                            android:id="@+id/anarAResposta"
                            android:layout_width="52dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@color/verdClar"
                            android:text="respostes" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>


    <EditText
        android:id="@+id/preguntaVew"
        android:layout_width="346dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginTop="30dp"
        android:hint="Fes una pregunta" />


    <Button
        android:id="@+id/sendPregunta"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/estil_botons"
        android:text="Enviar" />

</LinearLayout>