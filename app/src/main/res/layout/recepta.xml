<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/taronjaClar"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/taronjaClar"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/titol_recepta"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titol Recepta"
        android:textSize="30sp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="15dp" />



    </LinearLayout>

    <ImageView
        android:id="@+id/iconRecepta"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="158dp" />

    <TextView
        android:id="@+id/autor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:text="Nom de l'autor"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/passos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:text="Recepta "
        android:layout_marginStart="10dp" />

    <LinearLayout
        android:layout_width="448dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:text="Temps preparacio:"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/t_prep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:text="Temps preparacio"
            android:layout_marginStart="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="448dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:text="Temps cuina:"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/t_cuina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="Temps cuina"
            android:layout_marginStart="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="448dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:text="Nombre de comensals:"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/comensales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="Comensals"
            android:layout_marginStart="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="448dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:text="Afegir ingredients a la llista de la compra:" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/verdClar"
            android:clickable="true"
            app:fabSize="mini"
            android:onClick="llista"
            app:srcCompat="@drawable/afegir" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:gravity="center"
            android:text="Afegir al calendari com a Ã pat:" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/verdClar"
            android:clickable="true"
            android:onClick="calendari"
            app:fabSize="mini"
            app:srcCompat="@drawable/afegir" />
    </LinearLayout>
        <Button
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/verdClar"
            android:layout_gravity="center"
            android:text="AFEGIR RECEPTA CALENDARI"
            android:onClick="calendari"></Button>

    </LinearLayout>
    </ScrollView>
</LinearLayout>