<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/verdFosc"
        android:gravity="center_vertical"
        android:text="Enviar Resposta: "
        android:textAppearance="@style/TextBlancTitolSecundari"
        android:textSize="23sp"
        android:textStyle="bold" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:background="@color/gris">

        <LinearLayout
            android:id="@+id/layoutRespostes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"></LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <EditText
        android:id="@+id/resposta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Resposta"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/enviarRespostaAlForumm"
        android:layout_width="134dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:background="@drawable/estil_botons"
        android:text="Enviar" />

    <Button
        android:id="@+id/buttonEnrere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENRERE" />
</LinearLayout>